<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.infot.firststeps.MainActivity" tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">
    <TextView
            android:text="Count :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="74dp"
            android:id="@+id/textLabel"
            app:layout_constraintRight_toLeftOf="@+id/btAdd" android:layout_marginRight="0dp"/>
    <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="167dp"
            tools:layout_editor_absoluteX="148dp" android:id="@+id/btAdd"/>
    <Button
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="231dp"
            tools:layout_editor_absoluteX="148dp" android:id="@+id/btReset"/>
    <Button
            android:text="Remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="300dp"
            tools:layout_editor_absoluteX="148dp" android:id="@+id/btRemove"/>
</android.support.constraint.ConstraintLayout>