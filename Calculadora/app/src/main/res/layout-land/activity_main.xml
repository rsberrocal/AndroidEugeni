<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cat.rsudario.calculadora.MainActivity" android:orientation="vertical"
        android:gravity="top|center">

    <LinearLayout
            android:layout_marginTop="270dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnSum" android:textSize="24sp"
                    android:onClick="sum"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="bottom|center"
                android:orientation="horizontal">
            <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnMinus" android:textSize="24sp"
                    android:onClick="min"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="bottom|center"
                android:orientation="horizontal">
            <Button
                    android:text="X"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnMult" android:textSize="24sp"
                    android:onClick="mult"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="bottom|center"
                android:orientation="horizontal">
            <Button
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnDiv" android:textSize="24sp"
                    android:onClick="div"/>
        </TableRow>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="top|center|fill|start|end">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/powerOn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:textSize="24sp" android:id="@+id/txPower"
                android:gravity="center" android:textColor="#05ad40"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/resultat"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:textSize="24sp" android:id="@+id/textView2"
                android:gravity="center"/>
        <TextView
                android:id="@+id/txResultat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"/>
    </LinearLayout>
    <TableLayout
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="150dp" android:orientation="horizontal"
    >

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:textSize="24sp"
                    android:layout_height="wrap_content" android:id="@+id/btnOne" android:onClick="addNum"/>
            <Button
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:textSize="24sp"
                    android:layout_height="wrap_content" android:id="@+id/btnTwo" android:onClick="addNum"/>
            <Button
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:textSize="24sp"
                    android:layout_height="wrap_content" android:id="@+id/btnThree" android:onClick="addNum"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:textSize="24sp"
                    android:layout_height="wrap_content" android:id="@+id/btnFour" android:onClick="addNum"/>
            <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:textSize="24sp"
                    android:layout_height="wrap_content" android:id="@+id/btnFive" android:onClick="addNum"/>
            <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:textSize="24sp"
                    android:layout_height="wrap_content" android:id="@+id/btnSix" android:onClick="addNum"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:textSize="24sp"
                    android:layout_height="wrap_content" android:id="@+id/btnSeven" android:onClick="addNum"/>
            <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:textSize="24sp"
                    android:layout_height="wrap_content" android:id="@+id/btnEight" android:onClick="addNum"/>
            <Button
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:textSize="24sp"
                    android:layout_height="wrap_content" android:id="@+id/btnNine" android:onClick="addNum"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>
