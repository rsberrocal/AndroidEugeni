<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.richard.tresprogressbar.MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:gravity="center_horizontal">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center_horizontal">
            <Button
                android:text="TAREA EN SEGUNDO PLANO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn2"
                android:layout_marginTop="18dp" android:layout_below="@+id/tx2" android:layout_centerHorizontal="true"
                android:onClick="barraDos"/>
        </TableRow>
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:gravity="center_horizontal">
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pb2" android:layout_marginRight="30px" android:layout_marginBottom="20px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignTop="@+id/pb2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:id="@+id/tx2"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center_horizontal">
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pb5" android:layout_marginRight="30px" android:layout_marginBottom="20px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignTop="@+id/pb2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:id="@+id/tx5"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center_horizontal">
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pb10" android:layout_marginRight="30px" android:layout_marginBottom="20px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignTop="@+id/pb2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:id="@+id/tx10"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>
